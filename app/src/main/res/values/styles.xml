<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:actionBarSize">0dp</item>
    </style>

    <style name="LanguageButton" parent="Base.TextAppearance.AppCompat.Button">
        <item name="android:textColor">@color/primaryText</item>
        <item name="textAllCaps">false</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">8dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="InputEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:fontFamily">@font/roboto</item>
        <item name="android:gravity">top</item>
        <item name="android:inputType">textMultiLine</item>
        <item name="android:layout_marginStart">@dimen/margin_16dp</item>
        <item name="android:layout_marginEnd">@dimen/margin_16dp</item>
        <item name="android:scrollHorizontally">false</item>
        <item name="android:textColor">@color/primaryText</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.SearchView">
        <item name="android:editTextColor">@color/primaryText</item>
        <item name="android:textColorHint">@color/secondaryText</item>
        <item name="android:fontFamily">@font/roboto</item>
    </style>

    <style name="RoundedButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/margin_16dp</item>
        <item name="android:background">@drawable/rounded_corners_button</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>
